<Window x:Class="BasiCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasiCalc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Content="change text" HorizontalAlignment="Left" Height="53" Margin="197,192,0,0" VerticalAlignment="Top" Width="139" Click="Btn_ChangeTXT_Click"/>
        <TextBox x:Name="TXT_Box" Grid.Column="1" HorizontalAlignment="Left" Height="40" Margin="66,77,0,0" TextWrapping="Wrap" Text="the cake is a lie" VerticalAlignment="Top" Width="150" TextChanged="TXT_Box_TextChanged"/>
        <Button Grid.Column="1" Content="add text" HorizontalAlignment="Left" Height="53" Margin="53,192,0,0" VerticalAlignment="Top" Width="131" Click="Btn_AddTXT_Click"/>

    </Grid>
</Window>
